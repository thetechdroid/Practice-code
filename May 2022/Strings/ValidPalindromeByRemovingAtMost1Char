class ValidPalindromeByRemovingAtMost1Char {
    public boolean validPalindrome(String s) {
        
        int start = 0;
        int end = s.length() -1;
        
        
        while(start < end){
            
            if(s.charAt(start) != s.charAt(end)){
                return (checkIfPalindrome(s, start + 1, end) || checkIfPalindrome(s, start, end - 1));
            }
            
            start++;
            end--;
        }
        
        return true;
        
        
    }
    
    
    public boolean checkIfPalindrome(String s, int i, int j){
        while(i < j){
            if(s.charAt(i) != s.charAt(j)){
                return false;
            }
            i++;
            j--;
        }
        return true;
    }
    
}
