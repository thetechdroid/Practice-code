class Solution {
    public int findKthSmallest(int[] nums, int k) {
        
        if(nums == null || nums.length == 0) return -1;
        
        if(k > nums.length) return -1;
        
        if(k == 0) return -1;
        
        
        //basic approach
        int result = 0;
        
        Arrays.sort(nums);
        
        return nums[k-1];
        
        
        
        
    }
}
