class FindFirstAndLastPosition {
    public int[] searchRange(int[] nums, int target) {
        
        int[] result = new int[2];
        Arrays.fill(result, -1);
        
        if(nums == null || nums.length == 0){
            return result;
        }
        
        result[0] = searchNumber(nums, target, true);
        result[1] = searchNumber(nums, target, false);
        
        return result;
        
    }
    
    
    private int searchNumber(int[] nums, int target, boolean isFirstIndex){
        int result = -1;
        int start = 0;
        int end = nums.length -1;
        
        
        while(start <= end){
            
            int mid = start + (end-start)/2;
            
            if(nums[mid] > target){
                end = mid - 1;
            }else if(nums[mid] < target){
                start = mid + 1;
            }else{
                result = mid;
                
                if(isFirstIndex){ 
                    end = mid - 1; // basically ends the loop since we dont wanna search anything else 
                }else{
                    start = mid+1; // same thing here
                }
            }
        }
        return result;
    }
    
    
}
