class IsPowerOfTwo {
    public boolean isPowerOfTwo(int n) {
        
        if(n <= 0){
            return false;
        }
        
        double num = 0;
        
        num = Math.log10(n) / Math.log10(2);
        
        if(num == Math.floor(num)){
            return true;
        }else{
            return false;
        }
        
        
    }
}
